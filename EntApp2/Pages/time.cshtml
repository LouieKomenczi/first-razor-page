@page
@model EntApp2.Pages.timeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>time</title>
</head>
<body>
    <form method="post">
        @for (int i = 0; i < Model.Days.Length; i++)
        {
            <input type="checkbox" asp-for=DaysSelected[i]>
            <label asp-for=DaysSelected[i]>@Model.Days[i]</label>
        }
        <br />



        <br />
        <select asp-for=MonthSelected asp-items=Model.Month></select>

        <button type="submit"> Submit Days</button>
        <br />

    </form>

    <ul>
        @for (int i = 0; i < Model.Message.Length; i++)
        {
            if (@Model.DaysSelected[i])
            {
                <li>@Model.Days[i] </li>
            }

        }
    </ul>


    <h2>@Html.Raw(Model.Message1)</h2>


</body>
</html>
